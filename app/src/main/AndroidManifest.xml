<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.mywallet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Add_Customer"></activity>
        <activity android:name=".Preferences"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".AboutScreen"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".RecyclerViewAdapter" />
        <activity android:name=".recycler1" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>